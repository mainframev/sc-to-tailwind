{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "target": "esnext",
    "outDir": "build",
    "module": "esnext",
    "jsx": "react",
    "skipLibCheck": true,
    "allowJs": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "useUnknownInCatchVariables": false
  },
  "include": ["src/**/*", "jest.config.ts"],
  "exclude": ["node_modules"]
}
