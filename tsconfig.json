{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "target": "esnext",
    "outDir": "build",
    "module": "esnext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "useUnknownInCatchVariables": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
